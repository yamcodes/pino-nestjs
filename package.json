{
  "name": "pino-nestjs",
  "version": "0.1.3",
  "description": "Drop-in Pino logger for NestJS with request context in every log",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "test": "jest --verbose -i --detectOpenHandles --forceExit",
    "build": "turbo run build:root",
    "build:root": "rimraf dist && tsc -p tsconfig.build.json",
    "release": "pnpm run build && changeset publish",
    "prepack": "pnpm run build",
    "fix": "biome check --write .",
    "check": "biome check",
    "check:errors": "biome check --diagnostic-level=error",
    "clean": "rimraf dist node_modules"
  },
  "files": [
    "dist"
  ],
  "engineStrict": true,
  "engines": {
    "node": ">= 14"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yamcodes/pino-nestjs.git"
  },
  "keywords": [
    "pino",
    "nestjs",
    "nest.js",
    "nest",
    "logger"
  ],
  "author": "yamcodes <yam@yam.codes> (http://github.com/yamcodes)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/yamcodes/pino-nestjs/issues"
  },
  "homepage": "https://github.com/yamcodes/pino-nestjs#readme",
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@changesets/cli": "^2.28.1",
    "@nestjs/common": "^11.0.3",
    "@nestjs/core": "^11.0.3",
    "@nestjs/platform-express": "^11.0.3",
    "@nestjs/platform-fastify": "^11.0.3",
    "@nestjs/testing": "^11.0.3",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/memorystream": "^0.3.4",
    "@types/node": "^22.10.7",
    "@types/supertest": "^6.0.2",
    "changesets-changelog-clean": "^1.3.0",
    "globals": "^16.0.0",
    "jest": "29.7.0",
    "memorystream": "^0.3.1",
    "pino": "^9.6.0",
    "pino-http": "^10.4.0",
    "reflect-metadata": "^0.1.14",
    "rimraf": "^6.0.1",
    "rxjs": "^7.8.1",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "turbo": "^2.4.4",
    "typescript": "^5.7.3"
  },
  "peerDependencies": {
    "@nestjs/common": "^8.0.0 || ^9.0.0 || ^10.0.0 || ^11.0.0",
    "pino": "^7.5.0 || ^8.0.0 || ^9.0.0",
    "pino-http": "^6.4.0 || ^7.0.0 || ^8.0.0 || ^9.0.0 || ^10.0.0",
    "rxjs": "^7.1.0"
  },
  "packageManager": "pnpm@10.5.2",
  "pnpm": {
    "onlyBuiltDependencies": [
      "@biomejs/biome",
      "@nestjs/core"
    ]
  },
  "dependencies": {
    "radashi": "^12.3.4"
  }
}
